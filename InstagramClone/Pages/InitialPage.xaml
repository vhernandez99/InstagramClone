<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InstagramClone.Pages.InitialPage"
             NavigationPage.HasNavigationBar="False" BackgroundColor="White"
             >
    <ContentPage.Content>
        <Grid>
            <Grid RowDefinitions="*">
                <Grid>
                    <Image Source="test8" Aspect="AspectFill"/>
                    <!--<Image Source="slife" VerticalOptions="CenterAndExpand" WidthRequest="150"/>-->
                    <Grid RowDefinitions="Auto" ColumnDefinitions="0.5*,0.5*" Margin="10" VerticalOptions="EndAndExpand">
                        <Button Grid.ColumnSpan="2" CornerRadius="8" BackgroundColor="#4460a0" ImageSource="fb32x32" 
                                Text="Iniciar sesion con Facebook" TextColor="White"/>
                        <Button Grid.Row="1" CornerRadius="8" BackgroundColor="#33CC33" Text="Iniciar sesion" 
                                Command="{Binding GoToLoginPageCommand}" TextColor="White"/>
                        <Button Grid.Row="1" Grid.Column="1" CornerRadius="8" BackgroundColor="Black"  
                                Command="{Binding GoToSignUpPageCommand}" BorderWidth="1" Text="Crear cuenta" TextColor="White"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>